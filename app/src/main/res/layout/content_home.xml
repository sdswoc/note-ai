<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    tools:showIn="@layout/activity_home"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="155dp"
        android:textColor="#191970"
        android:textSize="40dp"
        android:text="Note.AI"
        android:layout_alignParentRight="true"
        android:layout_marginRight="175dp" />

    <Button
        android:id="@+id/my_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="13dp"
        android:text="My Account"
        android:textSize="20dp"
        android:background="#87CEFA"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="85dp"
        android:background="#000000"
         />

    <Button
        android:id="@+id/button4"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:layout_marginStart="5dp"
        android:text="Add Courses"
        android:textSize="30dp"
        android:background="#87CEFA"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="175dp"
        android:text="Add a new course or select one from already registered courses."
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="5dp"
        android:text="View"
        android:textSize="30dp"
        android:background="#87CEFA"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="175dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:text="View your personal notes"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="300dp"
        android:text="Personal Notes"
        android:background="#87CEFA"
        android:textSize="28dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="380dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:text="Create private notes."
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="300dp"
        android:layout_marginStart="5dp"
        android:text="PDF Uploader"
        android:background="#87CEFA"
        android:textSize="28dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_alignParentTop="true"
        android:textSize="15dp"
        android:layout_marginTop="380dp"
        android:textAlignment="center"
        android:text="Upload PDF Files and view them."
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp" />


</RelativeLayout>